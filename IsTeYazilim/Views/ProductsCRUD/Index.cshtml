@model IEnumerable<IsTeYazilim.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ÜRÜNLER</h1>

<p>
    <a asp-action="Create">Yeni ürün oluştur.</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductID">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.ProductID">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductID">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
